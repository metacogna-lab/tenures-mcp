# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_API_VERSION=v1

# Authentication
BEARER_TOKEN=your-secret-bearer-token-here
ROLE=agent  # agent or admin

# Database
DATABASE_PATH=./data/tenure_mcp.db

# Observability
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=tenure-mcp-mvp
OPENTELEMETRY_ENABLED=true

# Langfuse (optional for MVP)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Mock Integration Settings
VAULTRE_MOCK_ENABLED=true
AILO_MOCK_ENABLED=true
MOCK_LATENCY_MS=500

# HITL Configuration
HITL_ENABLED=true
HITL_TOKEN_SECRET=your-hitl-token-secret

# Feature Flags
MULTI_TENANT_ENABLED=false
PRODUCTION_INTEGRATIONS_ENABLED=false
